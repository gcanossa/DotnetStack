@inject IJSRuntime JS

<CascadingValue Value="this">
  @ChildContent
</CascadingValue>

@code {
  [Parameter]
  public RenderFragment? ChildContent { get; set; }

  [Parameter]
  public string? Selector { get; set; }

  private IJSObjectReference? _module;

  protected override async Task OnInitializedAsync()
  {
    _module = await JS.InvokeAsync<IJSObjectReference>(
    "import", "./_content/GC.Utils.UI/Components/FullscreenProvider.razor.js");
  }

  public async Task OpenFullscreen()
  {
    await JS.InvokeVoidAsync("openFullscreen", Selector);
  }

  public async Task CloseFullscreen()
  {
    await JS.InvokeVoidAsync("closeFullscreen", Selector);
  }
}