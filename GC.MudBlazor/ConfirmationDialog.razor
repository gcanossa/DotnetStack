<MudDialog>
  <DialogContent>
    <MudText>@((MarkupString)ContentText)</MudText>
  </DialogContent>
  <DialogActions>
    <MudButton OnClick="Cancel">@CancelButtonText</MudButton>
    <MudButton Color="@Color" Variant="Variant.Filled" OnClick="Submit">@OkButtonText</MudButton>
  </DialogActions>
</MudDialog>

@code {
  [CascadingParameter] MudDialogInstance? MudDialog { get; set; }

  [Parameter] public string ContentText { get; set; } = "Confermi l'operazione?";

  [Parameter] public string CancelButtonText { get; set; } = "Annulla";
  [Parameter] public string OkButtonText { get; set; } = "Ok";

  [Parameter] public Color Color { get; set; }

  void Submit() => MudDialog?.Close(DialogResult.Ok(true));
  void Cancel() => MudDialog?.Cancel();
}